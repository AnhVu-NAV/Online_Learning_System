<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Khai báo servlet Controller -->
    <servlet>
        <servlet-name>UserDashboardController</servlet-name>
        <servlet-class>controller.UserDashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingDashboardController</servlet-name>
        <servlet-class>controller.SettingDashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserDashboardController</servlet-name>
        <url-pattern>/UserDashboardController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingDashboardController</servlet-name>
        <url-pattern>/SettingDashboardController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>controller.ChangePasswordController</servlet-class>
    </servlet>

    <!-- Declare ForgotPasswordController Servlet -->
    <servlet>
        <servlet-name>ForgotPasswordController</servlet-name>
        <servlet-class>controller.ForgotPasswordController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordController</servlet-name>
        <url-pattern>/ForgotPasswordController</url-pattern>
    </servlet-mapping>

    <!-- Declare Controller Servlet -->
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>controller.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlogListServlet</servlet-name>
        <servlet-class>com.example.project.controller.BlogListServlet</servlet-class>
    </servlet>
    <!-- Khai báo servlet BlogListServlet -->

    <!-- Declare BlogListServlet -->
    <servlet>
        <servlet-name>BlogListServlet</servlet-name>
        <servlet-class>controller.BlogListServlet</servlet-class>
    </servlet>

    <!-- Map ChangePasswordController Servlet -->
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>

    <!-- Map ForgotPasswordController Servlet -->
    <servlet-mapping>
        <servlet-name>ForgotPasswordController</servlet-name>
        <url-pattern>/ForgotPasswordController</url-pattern>
    </servlet-mapping>

    <!-- Map Controller Servlet -->
    <servlet>
        <servlet-name>CourseListController</servlet-name>
        <servlet-class>controller.CourseListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserProfileController</servlet-name>
        <servlet-class>controller.UserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateUserProfileController</servlet-name>
        <servlet-class>controller.UpdateUserProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseDetailController</servlet-name>
        <servlet-class>controller.CourseDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterCourseController</servlet-name>
        <servlet-class>controller.RegisterCourseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>

    <!-- Map BlogListServlet -->
    <servlet-mapping>
        <servlet-name>BlogListServlet</servlet-name>
        <url-pattern>/blogList</url-pattern>
    </servlet-mapping>

    <!-- Declare AuthorizationFilter -->
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>filter.AuthorizationFilter</filter-class>
    </filter>

    <!-- Map AuthorizationFilter -->
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <servlet-mapping>
        <servlet-name>CourseListController</servlet-name>
        <url-pattern>/CourseList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserProfileController</servlet-name>
        <url-pattern>/UserProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateUserProfileController</servlet-name>
        <url-pattern>/UpdateUserProfile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseDetailController</servlet-name>
        <url-pattern>/CourseDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterCourseController</servlet-name>
        <url-pattern>/RegisterCourse</url-pattern>
    </servlet-mapping>
</web-app>
